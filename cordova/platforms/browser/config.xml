<?xml version='1.0' encoding='utf-8'?>
<widget id="name.ark.ntc" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Name that Color</name>
    <description>
        A simple but addictive game
    </description>
    <author email="ntc@akaanksh.ga" href="https://ntc.akaanksh.ga/">
        Akaanksh Raj
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <universal-links>
        <host name="bf2j2.app.goo.gl" scheme="https" />
        <host name="ntc.akaanksh.ga" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <preference name="AndroidLaunchMode" value="singleTask" />
</widget>
